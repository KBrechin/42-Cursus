#include "libft.h"

size_t	ft_strlcpy(char *dst, const char *src, size_t dstsize)
{
	size_t	srcsize;
	size_t	i;

	i = 0;
	while (src)
	{
		srcsize++;
	}
	while (dstsize--)
	{
		dst[i] = src[i];
		i++;
	}
	return (srcsize);
}
